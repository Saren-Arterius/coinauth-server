extends templates/card.pug

block vars
  - let title = 'general_error'
  
block content
  .card.card-register.mx-auto.mt-5
    .card-header
      span Error (#{error.message})
    .card-body
      form
        case error.message
          when 'NOT_FOUND'
            p The page you requested was not found. Please ensure the URL is valid.
            - break
          when 'WRONG_ACCOUNT'
            p Wrong associated account, either this web account or minecraft account has already been registered. Please logout and use another account.
            - break
          when 'LOGIN_REQURIED'
            p You are not logged in. Please login minecraft server first, then click the URL sent to you to login.
            - break
          default
            p #{error.message}
            - break
        if error
          p= error.status
          pre #{error.stack}
      .text-center
        a.d-block.small.mt-3(href='#' onclick='return logoutFirebase();') Logout
